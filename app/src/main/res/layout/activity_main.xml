<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="#c30010"
        android:textStyle="bold|normal"
        android:layout_gravity="center"
        android:text="Pizza App"

        />
    
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/pizza"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your pizza size"
        android:textSize="20dp"
        android:textStyle="bold|normal"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small (RM 5)"
            android:id="@+id/smallRadioButton"/>
        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium (RM 7)"
        android:id="@+id/mediumRadioButton"/>
        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large (RM 9)"
        android:id="@+id/largeRadioButton"/>
        </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your toppings"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onions(RM 1)"
            android:id="@+id/OnionsBox"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomatoes(RM 1)"
            android:id="@+id/TomatoesBox"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olives(RM 2)"
            android:id="@+id/OlivesBox"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place your order"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:textSize="18dp"/>
    <TextView

        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your total price is "
        android:layout_gravity="center"/>
</LinearLayout>